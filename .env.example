# ============================================
# TEAHAVEN - ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env.staging or .env.production
# NEVER commit actual secrets to version control!

# ============================================
# DATABASE
# ============================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=teahaven
DB_USER=teahaven
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD

# ============================================
# REDIS
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_EXPIRES_IN=7d

# ============================================
# STRIPE PAYMENTS
# ============================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXX

# ============================================
# GOOGLE MAPS (for address autocomplete)
# ============================================
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXX

# ============================================
# DOMAIN & URLS
# ============================================
DOMAIN=teahaven.com
FRONTEND_URL=https://teahaven.com
API_URL=https://teahaven.com/api

# ============================================
# DOCKER REGISTRY
# ============================================
# Use Docker Hub: docker.io/yourusername
# Or private registry: registry.digitalocean.com/your-registry
DOCKER_REGISTRY=docker.io/yourusername
VERSION=latest

# ============================================
# EMAIL SERVICE (Optional)
# ============================================
# For order confirmations, password resets
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.XXXXXXXXXXXXXXX
EMAIL_FROM=noreply@teahaven.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
